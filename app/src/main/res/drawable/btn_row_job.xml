<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false">
        <shape>
            <solid android:color="@color/lessAccent" />
            <corners android:bottomLeftRadius="@dimen/card_corner_radius" android:bottomRightRadius="@dimen/card_corner_radius" />
            <padding android:bottom="16dp" android:left="16dp" android:right="16dp" android:top="16dp" />
        </shape>
    </item>


    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorAccent" />
            <corners android:bottomLeftRadius="@dimen/card_corner_radius" android:bottomRightRadius="@dimen/card_corner_radius" />
            <padding android:bottom="16dp" android:left="16dp" android:right="16dp" android:top="16dp" />
        </shape>
    </item>
</selector>